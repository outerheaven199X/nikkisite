# Network interface to sniff (should be your Pi's LAN interface)
PSN_IFACE=eth0
# BPF filter (safe defaults: ARP, DHCP, DNS, mDNS)
PSN_BPF_FILTER=(arp or (udp and (port 67 or port 68 or port 53 or port 5353)))
# Database path
PSN_DB=./pi_sentinel.db
# API bind
PSN_HOST=0.0.0.0
PSN_PORT=8088
# Data retention window (days)
PSN_RETENTION_DAYS=14
# Enable optional wifi probe sniffer (monitor mode required)
PSN_WIFI_PROBE_ENABLED=false
# Wireless interface in monitor mode (ONLY IF LEGAL + SUPPORTED)
PSN_WIFI_MON_IFACE=wlan1mon
